[{"id":109,"surat":"Al-Kafirun","ayat":"قُلْ يٰٓاَيُّهَا الْكٰفِرُوْنَۙ","bacaan":"qul yā ayyuhal-kāfirụn","arti":"Katakanlah (Muhammad), “Wahai orang-orang kafir!"},{"id":109,"surat":"Al-Kafirun","ayat":"لَآ اَعْبُدُ مَا تَعْبُدُوْنَۙ","bacaan":"lā a'budu mā ta'budụn","arti":"aku tidak akan menyembah apa yang kamu sembah,"},{"id":109,"surat":"Al-Kafirun","ayat":"وَلَآ اَنْتُمْ عٰبِدُوْنَ مَآ اَعْبُدُۚ","bacaan":"wa lā antum 'ābidụna mā a'bud","arti":"dan kamu bukan penyembah apa yang aku sembah,"},{"id":109,"surat":"Al-Kafirun","ayat":"وَلَآ اَنَا۠ عَابِدٌ مَّا عَبَدْتُّمْۙ","bacaan":"wa lā ana 'ābidum mā 'abattum","arti":"dan aku tidak pernah menjadi penyembah apa yang kamu sembah,"},{"id":109,"surat":"Al-Kafirun","ayat":"وَلَآ اَنْتُمْ عٰبِدُوْنَ مَآ اَعْبُدُۗ","bacaan":"wa lā antum 'ābidụna mā a'bud","arti":"dan kamu tidak pernah (pula) menjadi penyembah apa yang aku sembah."},{"id":109,"surat":"Al-Kafirun","ayat":"لَكُمْ دِيْنُكُمْ وَلِيَ دِيْنِ","bacaan":"lakum dīnukum wa liya dīn","arti":"Untukmu agamamu, dan untukku agamaku.”"}]
