[{"id":107,"surat":"Al-Ma'un","ayat":"اَرَءَيْتَ الَّذِيْ يُكَذِّبُ بِالدِّيْنِۗ","bacaan":"a ra`aitallażī yukażżibu bid-dīn","arti":"Tahukah kamu (orang) yang mendustakan agama?"},{"id":107,"surat":"Al-Ma'un","ayat":"فَذٰلِكَ الَّذِيْ يَدُعُّ الْيَتِيْمَۙ","bacaan":"fa żālikallażī yadu''ul-yatīm","arti":"Maka itulah orang yang menghardik anak yatim,"},{"id":107,"surat":"Al-Ma'un","ayat":"وَلَا يَحُضُّ عَلٰى طَعَامِ الْمِسْكِيْنِۗ","bacaan":"wa lā yaḥuḍḍu 'alā ṭa'āmil-miskīn","arti":"dan tidak mendorong memberi makan orang miskin."},{"id":107,"surat":"Al-Ma'un","ayat":"فَوَيْلٌ لِّلْمُصَلِّيْنَۙ","bacaan":"fa wailul lil-muṣallīn","arti":"Maka celakalah orang yang salat,"},{"id":107,"surat":"Al-Ma'un","ayat":"الَّذِيْنَ هُمْ عَنْ صَلَاتِهِمْ سَاهُوْنَۙ","bacaan":"allażīna hum 'an ṣalātihim sāhụn","arti":"(yaitu) orang-orang yang lalai terhadap salatnya,"},{"id":107,"surat":"Al-Ma'un","ayat":"الَّذِيْنَ هُمْ يُرَاۤءُوْنَۙ","bacaan":"allażīna hum yurā`ụn","arti":"yang berbuat ria,"},{"id":107,"surat":"Al-Ma'un","ayat":"وَيَمْنَعُوْنَ الْمَاعُوْنَ","bacaan":"wa yamna'ụnal-mā'ụn","arti":"dan enggan (memberikan) bantuan."}]
