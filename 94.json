[{"id":94,"surat":"Asy-Syarh","ayat":"اَلَمْ نَشْرَحْ لَكَ صَدْرَكَۙ","bacaan":"a lam nasyraḥ laka ṣadrak","arti":"Bukankah Kami telah melapangkan dadamu (Muhammad)?"},{"id":94,"surat":"Asy-Syarh","ayat":"وَوَضَعْنَا عَنْكَ وِزْرَكَۙ","bacaan":"wa waḍa'nā 'angka wizrak","arti":"dan Kami pun telah menurunkan bebanmu darimu,"},{"id":94,"surat":"Asy-Syarh","ayat":"الَّذِيْٓ اَنْقَضَ ظَهْرَكَۙ","bacaan":"allażī angqaḍa ẓahrak","arti":"yang memberatkan punggungmu, "},{"id":94,"surat":"Asy-Syarh","ayat":"وَرَفَعْنَا لَكَ ذِكْرَكَۗ","bacaan":"wa rafa'nā laka żikrak","arti":"dan Kami tinggikan sebutan (nama)mu bagimu."},{"id":94,"surat":"Asy-Syarh","ayat":"فَاِنَّ مَعَ الْعُسْرِ يُسْرًاۙ","bacaan":"fa inna ma'al-'usri yusrā","arti":"Maka sesungguhnya beserta kesulitan ada kemudahan,"},{"id":94,"surat":"Asy-Syarh","ayat":"اِنَّ مَعَ الْعُسْرِ يُسْرًاۗ","bacaan":"inna ma'al-'usri yusrā","arti":"sesungguhnya beserta kesulitan itu ada kemudahan."},{"id":94,"surat":"Asy-Syarh","ayat":"فَاِذَا فَرَغْتَ فَانْصَبْۙ","bacaan":"fa iżā faragta fanṣab","arti":"Maka apabila engkau telah selesai (dari sesuatu urusan), tetaplah bekerja keras (untuk urusan yang lain),"},{"id":94,"surat":"Asy-Syarh","ayat":"وَاِلٰى رَبِّكَ فَارْغَبْ","bacaan":"wa ilā rabbika fargab","arti":"dan hanya kepada Tuhanmulah engkau berharap."}]
