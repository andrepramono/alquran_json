[{"id":101,"surat":"Al-Qari'ah","ayat":"اَلْقَارِعَةُۙ","bacaan":"al-qāri'ah","arti":"Hari Kiamat,"},{"id":101,"surat":"Al-Qari'ah","ayat":"مَا الْقَارِعَةُ ۚ","bacaan":"mal-qāri'ah","arti":"Apakah hari Kiamat itu?"},{"id":101,"surat":"Al-Qari'ah","ayat":"وَمَآ اَدْرٰىكَ مَا الْقَارِعَةُ ۗ","bacaan":"wa mā adrāka mal-qāri'ah","arti":"Dan tahukah kamu apakah hari Kiamat itu?"},{"id":101,"surat":"Al-Qari'ah","ayat":"يَوْمَ يَكُوْنُ النَّاسُ كَالْفَرَاشِ الْمَبْثُوْثِۙ","bacaan":"yauma yakụnun-nāsu kal-farāsyil-mabṡụṡ","arti":"Pada hari itu manusia seperti laron yang beterbangan,"},{"id":101,"surat":"Al-Qari'ah","ayat":"وَتَكُوْنُ الْجِبَالُ كَالْعِهْنِ الْمَنْفُوْشِۗ","bacaan":"wa takụnul-jibālu kal-'ihnil-manfụsy","arti":"dan gunung-gunung seperti bulu yang dihambur-hamburkan."},{"id":101,"surat":"Al-Qari'ah","ayat":"فَاَمَّا مَنْ ثَقُلَتْ مَوَازِينُهٗۙ","bacaan":"fa ammā man ṡaqulat mawāzīnuh","arti":"Maka adapun orang yang berat timbangan (kebaikan)nya,"},{"id":101,"surat":"Al-Qari'ah","ayat":"فَهُوَ فِيْ عِيْشَةٍ رَّاضِيَةٍۗ","bacaan":"fa huwa fī 'īsyatir rāḍiyah","arti":"maka dia berada dalam kehidupan yang memuaskan (senang)."},{"id":101,"surat":"Al-Qari'ah","ayat":"وَاَمَّا مَنْ خَفَّتْ مَوَازِيْنُهٗۙ","bacaan":"wa ammā man khaffat mawāzīnuh","arti":"Dan adapun orang yang ringan timbangan (kebaikan)nya,"},{"id":101,"surat":"Al-Qari'ah","ayat":"فَاُمُّهُ هَاوِيَةٌ ۗ","bacaan":"fa ummuhụ hāwiyah","arti":"maka tempat kembalinya adalah neraka Hawiyah."},{"id":101,"surat":"Al-Qari'ah","ayat":"وَمَآ اَدْرٰىكَ مَا هِيَهْۗ","bacaan":"wa mā adrāka mā hiyah","arti":"Dan tahukah kamu apakah neraka Hawiyah itu?"},{"id":101,"surat":"Al-Qari'ah","ayat":"نَارٌ حَامِيَةٌ","bacaan":"nārun ḥāmiyah","arti":"(Yaitu) api yang sangat panas."}]
