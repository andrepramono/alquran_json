[{"id":104,"surat":"Al-Humazah","ayat":"وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍۙ","bacaan":"wailul likulli humazatil lumazah","arti":"Celakalah bagi setiap pengumpat dan pencela,"},{"id":104,"surat":"Al-Humazah","ayat":" ۨالَّذِيْ جَمَعَ مَالًا وَّعَدَّدَهٗۙ","bacaan":"allażī jama'a mālaw wa 'addadah","arti":"yang mengumpulkan harta dan menghitung-hitungnya,"},{"id":104,"surat":"Al-Humazah","ayat":"يَحْسَبُ اَنَّ مَالَهٗٓ اَخْلَدَهٗۚ","bacaan":"yaḥsabu anna mālahū akhladah","arti":"dia (manusia) mengira bahwa hartanya itu dapat mengekalkannya."},{"id":104,"surat":"Al-Humazah","ayat":"كَلَّا لَيُنْۢبَذَنَّ فِى الْحُطَمَةِۖ","bacaan":"kallā layumbażanna fil-ḥuṭamah","arti":"Sekali-kali tidak! Pasti dia akan dilemparkan ke dalam (neraka) Hutamah."},{"id":104,"surat":"Al-Humazah","ayat":"وَمَآ اَدْرٰىكَ مَا الْحُطَمَةُ ۗ","bacaan":"wa mā adrāka mal-ḥuṭamah","arti":"Dan tahukah kamu apakah (neraka) Hutamah itu?"},{"id":104,"surat":"Al-Humazah","ayat":"نَارُ اللّٰهِ الْمُوْقَدَةُۙ","bacaan":"nārullāhil-mụqadah","arti":"(Yaitu) api (azab) Allah yang dinyalakan,"},{"id":104,"surat":"Al-Humazah","ayat":"الَّتِيْ تَطَّلِعُ عَلَى الْاَفْـِٕدَةِۗ","bacaan":"allatī taṭṭali'u 'alal-af`idah","arti":"yang (membakar) sampai ke hati."},{"id":104,"surat":"Al-Humazah","ayat":"اِنَّهَا عَلَيْهِمْ مُّؤْصَدَةٌۙ","bacaan":"innahā 'alaihim mu`ṣadah","arti":"Sungguh, api itu ditutup rapat atas (diri) mereka,"},{"id":104,"surat":"Al-Humazah","ayat":"فِيْ عَمَدٍ مُّمَدَّدَةٍ","bacaan":"fī 'amadim mumaddadah","arti":"(sedang mereka itu) diikat pada tiang-tiang yang panjang."}]
